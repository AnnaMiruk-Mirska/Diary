@model Diary.Models.Measurement

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

   




<div class="panel-primary">
    <div class="heading" style="background-color:white; width:200px; height:50px">
        <h2> Dodaj pomiar </h2>
    </div>
    <div class="pane-body" style="font-size:18px; background-color:white; width:290px">


        <form method="post" enctype="multipart/form-data">


            <div class="form-group">
                @Html.LabelFor(m => m.Date, new { @class = "col-md-10 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Date, "{0:dd-MM-yyyyThh:mm}", new { @class = "form-control", type = "datetime-local" })
                    @Html.ValidationMessageFor(m => m.Date, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Systolic, htmlAttributes: new { @class = "control-label col-md-10" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Systolic, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Systolic, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Diastolic, htmlAttributes: new { @class = "control-label col-md-10" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Diastolic, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Diastolic, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.HeartRate, htmlAttributes: new { @class = "control-label col-md-10" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HeartRate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HeartRate, "", new { @class = "text-danger" })
                </div>
            </div>








            <div class="form-group">
                @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "control-label col-md-10" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">



            </div>

            <button type="submit" class="btn btn-primary" style="font-size:16px; width:80px">Dodaj</button>
            <a class="btn btn-danger" style="font-size:16px; width:80px" href="@Url.Action("MeasurementList", "Measurement")">Anuluj</a>
        </form>





    </div>
</div>





